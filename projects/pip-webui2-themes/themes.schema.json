{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "PipWebui2Themes configuration",
    "type": "object",
    "required": [
        "themes",
        "output"
    ],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "themes": {
            "type": "array",
            "items": {
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Theme name"
                    },
                    "path": {
                        "type": "string",
                        "description": "Path to theme file"
                    },
                    "outputNamePattern": {
                        "type": "string",
                        "description": "Custom output name for specific themes"
                    },
                    "mixinsOnly": {
                        "type": "boolean",
                        "default": false,
                        "description": "Build only mixins provided by themes.scss"
                    }
                },
                "required": [
                    "name",
                    "path"
                ]
            }
        },
        "output": {
            "type": "object",
            "description": "Settings for output files",
            "properties": {
                "directories": {
                    "type": "array",
                    "description": "Directories to store result themes",
                    "items": {
                        "type": "string"
                    }
                },
                "outputNamePattern": {
                    "type": "string",
                    "description": "Pattern of file names"
                },
                "mixinsOnlyNamePattern": {
                    "type": "string",
                    "description": "Pattern of file names with mixinsOnlyFlag"
                }
            },
            "required": ["directories"]
        },
        "complete": {
            "$ref": "#/definitions/jsFiles",
            "description": "List of files which will be called after build all of the themes"
        }
    },
    "definitions": {
        "jsFiles": {
            "type": [
                "string",
                "array"
            ],
            "pattern": "js$",
            "items": {
                "oneOf": [
                    {
                        "type": "string",
                        "pattern": "js$",
                        "description": "The file to include."
                    }
                ]
            },
            "default": []
        }
    }
}